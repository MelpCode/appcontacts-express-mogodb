<%- include ('partials/_header') %>

<div class="row p-4">
    <% for (var i=0;i < contacts.length;i++) { %>
    <div class="col-md-3">
        <div class="card card-body border-primary">
            <div class="row">
                <div class="col-md-6">
                    <strong>Name:</strong>
                    <p><%= contacts[i].name %></p>
                </div>
                <div class="col-md-6">
                    <strong>Lastname:</strong>
                    <p><%= contacts[i].lastname%></p>
                </div>
            </div>
            <p><strong>Phone:</strong></p>
            <p><%= contacts[i].phone %></p>
            <p><strong>Email:</strong></p>
            <p><%= contacts[i].email%></p>
            <p><strong>Address:</strong></p>
            <p> <%= contacts[i].address %></p>
            <div class="container d-flex flex-row-reverse ">
                <div class="row">
                    <a href="/edit/<%= contacts[i]._id %>" class="p-2"><i class="fas fa-pen"></i></a>
                    <a href="/delete/<%= contacts[i]._id %>" class="p-2"><i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>
<%- include ('partials/_footer') %>