<%- include ('partials/_header') %>
<div class="row p-4">
    <div class="col-md-5 offset-md-3">
        <div class="card card-body">
            <form action="/edit/<%= contact._id%>"" method="POST">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="name" value="<%= contact.name %>" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="lastname" value="<%= contact.lastname %>" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="tel" name="phone" value="<%= contact.phone %>" class="form-control">
                </div>
                <div class="form-group">
                    <input type="email" name="email" value="<%= contact.email %>" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="address" value="<%= contact.address %>" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Update Contact</button>
            </form>
        </div>
    </div>
</div>

<%- include ('partials/_footer') %>