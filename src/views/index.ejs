<%- include ('partials/_header') %>

<div class="row p-4">
    <div class="col-md-5 mt-4">
        <div class="card card-body">
            <% if(status==true) { %>
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Contact Added Successfully</strong> 
                </div>
            <% } %>
            <form action="/add" method="POST">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Enter name" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="lastname" placeholder="Enter Lastname" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="tel" name="phone" placeholder="Enter phone" class="form-control">
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Enter email" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="address" placeholder="Enter address" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Save Contact</button>
            </form>
        </div>
    </div>
    <div class="col-md-7 mt-4">
        <div class="container offset-md-2 mt-4 tecnologias">
            <h1>REGISTRO DE CONTACTOS:</h1><br><br>
            <h3>Tecnologias empleadas:</h3><br>
            <p>1. Nodejs : Expressjs </p>
            <p>2. Mongodb : Mongoose</p>
            <p>3. Styles : Bootstrap - Bootswatch</p>
        </div>

    </div>
</div>

<%- include ('partials/_footer') %>